<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/idAndDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutPatId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp11"
                android:layout_marginLeft="@dimen/dp11"
               >

                <ImageView
                    android:id="@+id/bluelineImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp2"
                    android:paddingLeft="@dimen/dp2"
                    android:paddingTop="@dimen/dp2"
                    android:visibility="gone"
                    app:srcCompat="@drawable/result_blue_line"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/bluelineImageView"
                    android:layout_toRightOf="@id/bluelineImageView"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/patientIdTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14"
                        tools:ignore="RtlSymmetry"
                        tools:text="ID: 23456" />

                </LinearLayout>


                <TextView
                    android:id="@+id/appointmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp8"
                    android:layout_marginRight="@dimen/dp8"
                    android:fontFamily="@font/roboto_bold"
                    android:text="11:00 pm"
                    android:textColor="@color/appointment_time_color"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/patientDetailsClickLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

                <com.scorg.dms.ui.customesViews.CircularImageView
                    android:id="@+id/patientImageView"
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:visibility="gone"
                    tools:src="@drawable/uren_pic" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp11"
                    android:layout_marginLeft="@dimen/dp11"
                    android:layout_toEndOf="@id/patientImageView"
                    android:layout_toRightOf="@id/patientImageView"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    tools:ignore="RelativeOverlap">

                    <LinearLayout
                        android:id="@+id/layoutPatDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/patientNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_bold"
                            android:maxLines="1"
                            android:paddingEnd="@dimen/dp6"
                            android:paddingRight="@dimen/dp6"
                            android:textSize="@dimen/sp15"
                            tools:text="Mr. Uren Chhadva" />

                        <LinearLayout
                            android:id="@+id/patientDetailsLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/patientAgeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12"
                                tools:text="36 yrs - " />

                            <TextView
                                android:id="@+id/patientGenderTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/rating_color"
                                android:textSize="@dimen/sp12"
                                tools:text="Male" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutAppointmentCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/dp3"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/dp5"
                                android:layout_marginRight="@dimen/dp5"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/appointment_code"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />

                            <TextView
                                android:id="@+id/patientAppointmentsCode"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/roboto_medium"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12" />

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/opdTypeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp10"
                                android:layout_marginRight="@dimen/dp10"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Confirm"
                                android:textColor="@color/tagColor"
                                android:textSize="@dimen/sp12" />

                            <View
                                android:id="@+id/divView"
                                android:layout_width="@dimen/dp1"
                                android:layout_height="@dimen/dp12"
                                android:layout_marginTop="@dimen/dp3"
                                android:layout_toRightOf="@id/opdTypeTextView"
                                android:background="@color/grey" />

                            <TextView
                                android:id="@+id/appointmentConsultationType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/divView"
                                android:fontFamily="@font/roboto_medium"
                                android:paddingStart="@dimen/dp10"
                                android:paddingLeft="@dimen/dp10"
                                android:text="Consultation Type"
                                android:textColor="@color/green"
                                android:textSize="@dimen/sp12" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:visibility="gone"
                            tools:text="OPD Completed" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1.4"
                        android:gravity="right|bottom"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp16"
                            android:layout_marginRight="@dimen/dp16"
                            android:button="@drawable/checkboxselecter"
                            android:padding="@dimen/dp4"
                            android:visibility="gone"
                            tools:visibility="gone" />


                        <TextView
                            android:id="@+id/btnDone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:layout_marginEnd="@dimen/dp8"
                            android:layout_marginRight="@dimen/dp8"
                            android:layout_marginBottom="@dimen/dp2"
                            android:background="@drawable/shape_rectangle_sky_blue"
                            android:paddingStart="@dimen/dp10"
                            android:paddingLeft="@dimen/dp10"
                            android:paddingTop="@dimen/dp3"
                            android:paddingEnd="@dimen/dp10"
                            android:paddingRight="@dimen/dp10"
                            android:paddingBottom="@dimen/dp3"
                            android:text="@string/done"
                            android:textAllCaps="true"

                            android:textColor="@color/white"
                            android:textSize="@dimen/sp11" />


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>


        <View
            android:id="@+id/viewLine1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginStart="@dimen/dp2"
            android:layout_marginEnd="@dimen/dp2"
            android:background="@color/tagColor"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:layout_marginBottom="@dimen/dp8"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:padding="@dimen/dp3">

                <ImageView
                    android:id="@+id/callIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp3"
                    android:src="@drawable/mobile_icon" />

                <TextView
                    android:id="@+id/patientPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/rating_color"
                    android:textSize="@dimen/sp12"
                    tools:ignore="RtlHardcoded"
                    tools:text="987678999" />
            </LinearLayout>

            <View
                android:id="@+id/separatorView"
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp20"
                android:background="@color/tagColor" />

            <LinearLayout
                android:id="@+id/layoutAppointmentEpisode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp3"
                android:visibility="visible">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/episode"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp11"
                    tools:text="@string/episode" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/grey_shade" />
    </LinearLayout>
</LinearLayout>