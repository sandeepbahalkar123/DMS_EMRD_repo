<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp4"
    android:paddingStart="@dimen/dp4">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp2"
        android:layout_marginRight="@dimen/dp2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/dp10"
            android:paddingStart="@dimen/dp10"
            android:paddingTop="@dimen/dp5">

            <TextView
                android:id="@+id/ipd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:padding="@dimen/dp3"
                android:minWidth="?attr/actionBarSize"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/ipdValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginStart="@dimen/dp5"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp14"
                tools:text="@string/user_name" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp5"
                android:text="@string/doc_name"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp14"
                tools:text="@string/doc_name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp5"
            android:paddingEnd="@dimen/dp10"
            android:paddingStart="@dimen/dp10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ipdAdmissionDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp14"
                    tools:text="@string/admission_date" />

                <TextView
                    android:id="@+id/ipdAdmissionDateValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp14"
                    tools:text="@string/visit_date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ipdDischargeDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp14"
                    tools:text="@string/discharge_date" />

                <TextView
                    android:id="@+id/ipdDischargeDateValue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp14"
                    tools:text="@string/visit_date" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/ipdCheckBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:button="@drawable/checkboxselecter" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/childItemCollapseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp2"
            android:layout_marginLeft="@dimen/dp2"
            android:layout_marginRight="@dimen/dp2"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/rounded_gray"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/childItemExpandCollapseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:clickable="false"
                app:srcCompat="@drawable/ic_expand_more_black_24dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>