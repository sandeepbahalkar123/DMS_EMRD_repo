<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.dms_patient_list.PatientList"
    tools:showIn="@layout/patient_list_app_bar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/compareDialog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/autocompleteSearchBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp36"
                android:layout_margin="@dimen/dp5"
                android:background="@drawable/round_background_full_view"
                android:gravity="center"
                android:hint="Enter text"
                android:textCursorDrawable="@drawable/cursor_color" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:reverseLayout="false" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:reverseLayout="false" />


            <include
                android:id="@+id/emptyListView"
                layout="@layout/common_no_records_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

            <!-- <ExpandableListView
                 android:id="@+id/expandableListView"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:clipToPadding="false"
                 android:divider="@null"
                 android:groupIndicator="@android:color/holo_red_dark"
                 android:paddingBottom="@dimen/dp58"
                 android:paddingTop="@dimen/dp8"
                 android:visibility="gone" />-->

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/openFilterRightDrawerFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            app:backgroundTint="@color/Red"
            app:srcCompat="@drawable/ic_filter" />

    </FrameLayout>

    <include
        layout="@layout/compare_dialog"
        android:visibility="gone" />

</RelativeLayout>
