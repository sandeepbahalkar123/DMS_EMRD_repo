<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.dms_patient_list.PatientListActivity"
    tools:showIn="@layout/patient_list_app_bar">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/compareDialog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/toolbar_divider_color" />

            <LinearLayout
                android:id="@+id/layoutPatSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp42"
                android:layout_marginBottom="@dimen/dp5"
                android:orientation="vertical">

                <com.scorg.dms.ui.customesViews.SearchTextViewWithDeleteButton
                    android:id="@+id/autocompleteSearchBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:visibility="visible"
                    app:hintText="@string/patient_details_search_hint"
                    app:textSize="@dimen/sp15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:reverseLayout="false" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:reverseLayout="false" />


            <include
                android:id="@+id/emptyListView"
                layout="@layout/common_no_records_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

            <!-- <ExpandableListView
                 android:id="@+id/expandableListView"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:clipToPadding="false"
                 android:divider="@null"
                 android:groupIndicator="@android:color/holo_red_dark"
                 android:paddingBottom="@dimen/dp58"
                 android:paddingTop="@dimen/dp8"
                 android:visibility="gone" />-->

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/openFilterRightDrawerFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/dp10"
            app:srcCompat="@drawable/ic_filter" />

    </FrameLayout>

    <include
        layout="@layout/compare_dialog"
        android:visibility="gone" />

</RelativeLayout>
