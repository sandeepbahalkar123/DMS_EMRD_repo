<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="@dimen/dp5"
        android:layout_height="@dimen/dp5" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:background="@drawable/curv_edge_blue"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_dispalydetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="4"
            android:textSize="@dimen/sp12"
            android:layout_marginStart="@dimen/dp5"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dp5"
            android:paddingStart="@dimen/dp5"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ib_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="@dimen/dp5"
            android:layout_weight="2"
            android:background="@mipmap/crosswithcircle"
            android:paddingRight="@dimen/padding_very_tiny"
            android:paddingEnd="@dimen/padding_very_tiny"
            android:singleLine="true"
            android:textColor="@color/black" />
    </TableRow>

    <View
        android:layout_width="@dimen/dp1"
        android:layout_height="@dimen/dp1" />

</LinearLayout>
