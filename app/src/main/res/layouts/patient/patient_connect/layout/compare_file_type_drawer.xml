<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <!-- for below scrollview android:layout_height="@dimen/dp210"-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutMedicalRecordHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_header"
                android:background="@color/SkyBlue"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:padding="@dimen/dp5">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/imageCloseDrawer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_close_white"
                        android:background="@color/transparent"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="@string/medical_records"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="vertical"
                android:weightSum="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/patientInformation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />


            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:background="@color/grey_500"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/patientIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp8"
                    app:srcCompat="@drawable/usercheck" />

                <TextView
                    android:id="@+id/tvPatientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold"
                    tools:text="@string/app_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/uhidIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp8"
                        app:srcCompat="@drawable/keyblack" />

                    <TextView
                        android:id="@+id/labelDrawerUDID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uhid"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6">

                    <TextView
                        android:id="@+id/tvPatientUHID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginBottom="@dimen/margin_tiny"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13"
                        tools:text="@string/uhid" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutDrawerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/addressIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp8"
                        app:srcCompat="@drawable/location_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPatientLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp5"
                    android:padding="@dimen/dp2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp13"
                    tools:text="@string/address" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/fileOneLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginBottom="@dimen/margin_tiny"
                        android:background="@color/grey_500" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/padding_tiny"
                            android:gravity="center_vertical"
                            android:text="@string/file_one"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/fileTypeOneFileTypeName"
                                android:layout_width="@dimen/dp20"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_fileno"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="@dimen/padding_tiny"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp13"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/dp0"
                                android:layout_height="match_parent"
                                android:layout_weight="3" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/referenceidblack"
                            android:drawableLeft="@mipmap/referenceidblack"
                            android:drawablePadding="@dimen/padding_tiny"
                            android:gravity="center_vertical"
                            android:text="@string/refId"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            android:textStyle="bold" />

                        <LinearLayout
