                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/fileTypeOneRefID"
                                android:layout_width="@dimen/dp20"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_refid"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="@dimen/padding_tiny"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp13"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/dp0"
                                android:layout_height="match_parent"
                                android:layout_weight="3" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/doctorblack"
                            android:drawableLeft="@mipmap/doctorblack"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="@string/doctor"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fileTypeOneDoctorName"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/calendarblack"
                            android:drawableLeft="@mipmap/calendarblack"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="@string/admission"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fileTypeOneAdmissionDate"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />


                    </TableRow>


                    <TableRow
                        android:id="@+id/dischargeDateRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp10"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/calendarblack"
                            android:drawableLeft="@mipmap/calendarblack"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="@string/discharge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fileTypeOneDischargeDate"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />


                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginBottom="@dimen/margin_tiny"
                        android:background="@color/grey_500" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fileTwoLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/padding_tiny"
                            android:gravity="center_vertical"
                            android:text="@string/file_two"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/fileTypeTwoFileTypeName"
                                android:layout_width="@dimen/dp20"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_fileno"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="@dimen/dp5"
                                android:text=""
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/dp0"
                                android:layout_height="match_parent"
                                android:layout_weight="3" />
                        </LinearLayout>


                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/referenceidblack"
                            android:drawableLeft="@mipmap/referenceidblack"
                            android:drawablePadding="@dimen/padding_tiny"
                            android:gravity="center_vertical"
                            android:text="@string/refId"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/fileTypeTwoRefID"
                                android:layout_width="@dimen/dp20"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_refid"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="@dimen/dp5"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp13"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="@dimen/dp0"
                                android:layout_height="match_parent"
                                android:layout_weight="3" />
                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/doctorblack"
                            android:drawableLeft="@mipmap/doctorblack"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="@string/doctor"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fileTypeTwoDoctorName"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/calendarblack"
                            android:drawableLeft="@mipmap/calendarblack"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="@string/admission"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fileTypeTwoAdmissionDate"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />


                    </TableRow>


                    <TableRow
                        android:id="@+id/dischargeDateRowTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp10"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/calendarblack"
                            android:drawableLeft="@mipmap/calendarblack"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical"
                            android:text="@string/discharge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fileTypeTwoDischargeDate"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />

                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginBottom="@dimen/margin_tiny"
                        android:background="@color/grey_500" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/grey_500"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footerLayout"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/preferenceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:text="@string/preference"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7">

                        <LinearLayout
                            android:id="@+id/archivedPreferenceSpinnerBG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:background="@drawable/shape_rounded_corners_with_border">

                            <Spinner
                                android:id="@+id/archivedPreferenceSpinner"
                                android:layout_width="@dimen/dp110"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/shape_pref_bg"
                                android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutCompareSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/compare"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/compareDialogSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:textColor="@color/black"
                                android:textOff="@string/off"
                                android:textOn="@string/on" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layoutCompareSwitch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/both_scroll"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp13"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/compareDialogSwitch1"
