<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dp40">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/mainContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/node_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp3"
                android:layout_marginLeft="@dimen/dp3"
                android:button="@drawable/checkbox_selector"
                android:padding="@dimen/dp3"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/node_selector"
                android:layout_toRightOf="@+id/node_selector"
                android:padding="@dimen/dp6"
                android:src="@drawable/ic_tree_close_folder" />

            <TextView
                android:id="@+id/node_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_toStartOf="@+id/icon_lock"
                android:layout_toLeftOf="@+id/icon_lock"
                android:layout_toEndOf="@+id/icon"
                android:layout_toRightOf="@+id/icon"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:minHeight="@dimen/dp40"
                android:paddingStart="@dimen/dp4"
                android:paddingEnd="@dimen/dp4"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                tools:text="Discharge Summary (Hand written format)" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icon_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:padding="@dimen/dp5"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_lock"
                tools:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
