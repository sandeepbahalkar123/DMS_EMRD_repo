<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginBottom="@dimen/dp5"
    android:layout_marginStart="@dimen/dp5"
    android:layout_marginEnd="@dimen/dp5"
    android:layout_marginRight="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5">


    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainContentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginBottom="@dimen/dp8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8">

                <ImageView
                    android:id="@+id/bluelineImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/dp2"
                    android:paddingLeft="@dimen/dp2"
                    android:paddingTop="@dimen/dp2"
                    app:srcCompat="@drawable/result_blue_line"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <TextView
                    android:id="@+id/uhid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/bluelineImageView"
                    android:layout_toRightOf="@id/bluelineImageView"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/dp7"
                    android:paddingLeft="@dimen/dp7"
                    android:textColor="@color/tagColor"
                    android:textSize="@dimen/sp13"
                    tools:ignore="RtlSymmetry"
                    tools:text="ID" />

                <TextView
                    android:id="@+id/patientId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/uhid"
                    android:layout_toRightOf="@id/uhid"
                    android:fontFamily="@font/roboto_medium"

                    android:paddingStart="@dimen/dp2"
                    android:paddingLeft="@dimen/dp2"
                    android:textColor="@color/tagColor"
                    android:textSize="@dimen/sp13"
                    tools:ignore="RtlSymmetry"
                    tools:text="23456" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/patientImageView"
                        android:layout_width="@dimen/dp45"
                        android:layout_height="@dimen/dp45"
                        tools:src="@drawable/uren_pic" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp11"
                    android:layout_marginLeft="@dimen/dp11"
                    android:layout_toEndOf="@id/patientImageView"
                    android:layout_toRightOf="@id/patientImageView"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    tools:ignore="RelativeOverlap">


                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15"
                        tools:text="Mr. Uren Chhadva" />

                    <LinearLayout
                        android:id="@+id/patientDetailsLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/userAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp12"
                            android:visibility="gone"
                            tools:visibility="visible"
                            tools:text="36 yrs - " />

                        <TextView
                            android:id="@+id/userGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/rating_color"
                            android:textSize="@dimen/sp12"
                            android:visibility="gone"
                            tools:visibility="visible"
                            tools:text="Male" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.7"
                    android:gravity="bottom|right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/episodeList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp8"
                        android:layout_marginRight="@dimen/dp8"
                        android:background="@drawable/shape_rounded_corners_sky_blue"
                        android:paddingStart="@dimen/dp10"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingTop="@dimen/dp3"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingBottom="@dimen/dp3"
                        android:text="@string/episode"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp11" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>