<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|exitUntilCollapsed">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:popupTheme="@style/AppTheme"
        app:theme="@style/ToolbarColoredBackArrow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@mipmap/reset"
                android:drawableLeft="@mipmap/reset"
                android:drawablePadding="@dimen/dp5"
                android:gravity="center|start"
                android:text="@string/reset"
                android:textColor="@color/reset_yellow"
                android:textSize="@dimen/sp13"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/filter"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/apply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableEnd="@mipmap/apply"
                android:drawableRight="@mipmap/apply"
                android:drawablePadding="@dimen/dp5"
                android:gravity="end|center_vertical"
                android:text="@string/apply"
                android:textColor="@color/apply_blue"
                android:textSize="@dimen/sp13"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp6"
                android:paddingTop="@dimen/dp6"
                android:paddingRight="@dimen/dp6"
                android:text="@string/id_type"
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_selectId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:textColor="@color/dcr_customer_name" />

                <AutoCompleteTextView
                    android:id="@+id/et_uhid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:hint="Enter ID"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/sp13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_200"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp6"
                    android:paddingRight="@dimen/dp6"
                    android:layout_marginTop="@dimen/dp4"
                    android:text="@string/select_date_type"
                    android:textSize="@dimen/sp13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp4"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_admissionDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="start"
                        android:spinnerMode="dropdown"
                        android:layout_weight="1"
                        android:textColor="@color/black" />

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@color/grey_200"
                android:baselineAligned="false"
                android:paddingTop="@dimen/dp4"
                android:paddingBottom="@dimen/dp4"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageFromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp5"
                        android:src="@mipmap/calendar" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp2"
                        app:hintTextAppearance="@style/editTextInputLayout">

                        <EditText
                            android:id="@+id/et_fromdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ellipsize="end"
                            android:focusableInTouchMode="false"
                            android:hint="@string/from"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="@dimen/sp13" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageToDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/calendar" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp2"
                        android:layout_marginLeft="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:padding="@dimen/dp2"
                        app:hintTextAppearance="@style/editTextInputLayout">

                        <EditText
                            android:id="@+id/et_todate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ellipsize="end"
                            android:focusableInTouchMode="false"
                            android:hint="@string/to"
                            android:imeOptions="actionNext"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="@dimen/sp13" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_toStartOf="@+id/bt_clear_patient_name"
                    android:layout_toLeftOf="@+id/bt_clear_patient_name"
                    app:hintTextAppearance="@style/editTextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/et_searchPatientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="@string/searchbyPatient"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/sp13" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/bt_clear_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:padding="6dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@color/grey_200"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_toStartOf="@id/imageAnnotation"
                    android:layout_toLeftOf="@id/imageAnnotation"
                    app:hintTextAppearance="@style/editTextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/et_userEnteredAnnotation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="@string/enterAnnotation"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/sp13" />

                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageAnnotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/annotation" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_toStartOf="@id/bt_clear_search_annotation"
                    android:layout_toLeftOf="@id/bt_clear_search_annotation"
                    app:hintTextAppearance="@style/editTextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/et_search_annotation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="@string/searchAnnotation"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="@dimen/sp13" />

                </android.support.design.widget.TextInputLayout>


                <ImageView
                    android:id="@+id/bt_clear_search_annotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="3dp"
                    android:src="@mipmap/crosswithcircle" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/annotationTreeViewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgNoRecordFoundDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:srcCompat="@drawable/no_records_found"
            tools:visibility="visible" />


    </RelativeLayout>

</LinearLayout>