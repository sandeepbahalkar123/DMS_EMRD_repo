<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="7">

    <TextView
        style="@style/DayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek1"
        android:text="Sun"
        android:textColor="@color/patient_history_calender_days" />

    <TextView
        style="@style/DayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek2"
        android:text="Mon"
        android:textColor="@color/patient_history_calender_days" />

    <TextView
        style="@style/DayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek3"
        android:text="Tue"
        android:textColor="@color/patient_history_calender_days" />

    <TextView
        style="@style/DayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek4"
        android:text="Wed"
        android:textColor="@color/patient_history_calender_days" />

    <TextView
        style="@style/DayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek5"
        android:text="Thu"
        android:textColor="@color/patient_history_calender_days" />

    <TextView
        style="@style/DayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek6"
        android:text="Fri"
        android:textColor="@color/patient_history_calender_days" />

    <TextView
        style="@style/DayOfTheWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:tag="dayOfWeek7"
        android:text="Sat"
        android:textColor="@color/patient_history_calender_days" />

</LinearLayout>