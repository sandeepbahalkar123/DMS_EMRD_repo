<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp4"
    android:layout_weight="1"
    android:background="@drawable/border"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:layout_width="match_parent">

    <droidninja.filepicker.views.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/attachmentImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/titleText"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_file" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="@dimen/dp4"
            tools:text="Attachment" />

        <CheckBox
            android:button="@drawable/checkboxselecter"
            android:id="@+id/deleteCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp10"
            android:visibility="visible" />

    </droidninja.filepicker.views.SquareRelativeLayout>

</LinearLayout>