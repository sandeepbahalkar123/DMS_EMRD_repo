<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:paddingTop="@dimen/dp6">

    <LinearLayout
        android:id="@+id/vitalCellLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp2"
        android:background="@drawable/border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vitalImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_margin="@dimen/dp1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:padding="@dimen/dp5">

            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:id="@+id/vital_name"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textColor="@color/vitals_name"
                android:textSize="@dimen/sp11"
                app:customFont="@string/roboto_bold" />

            <LinearLayout
                android:id="@+id/unitValuesLayout"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right"
                android:orientation="horizontal">

                <com.rescribe.doctor.ui.customesViews.CustomTextView
                    android:id="@+id/noOfVitals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="fgfg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>