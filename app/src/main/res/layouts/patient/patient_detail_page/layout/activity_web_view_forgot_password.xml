<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp56"
        android:background="@color/tagColor">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp14"
            android:paddingStart="@dimen/dp14"
            android:paddingEnd="@dimen/dp10"
            android:paddingTop="@dimen/dp6"
            app:srcCompat="@drawable/back_arrow_a_01"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp10" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp14"
            android:layout_toRightOf="@id/backImageView"
            android:paddingLeft="@dimen/dp16"
            android:paddingStart="@dimen/dp16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp17"
            app:customFont="@string/roboto_bold"
            tools:text="Appointments" />


        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp7"
            android:id="@+id/progressBar"
            android:layout_alignParentBottom="true"
            android:indeterminate="false"
            tools:progress="90"
            android:max="90" />

    </RelativeLayout>

    <WebView
        android:id="@+id/webViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
