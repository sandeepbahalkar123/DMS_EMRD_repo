<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expandVisitDetailsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        tools:visibility="visible"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/items_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp58"
        android:orientation="horizontal">

        <com.scorg.dms.ui.customesViews.CircularImageView
            android:layout_width="@dimen/dp5"
            android:layout_height="@dimen/dp5"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/circular_bullet" />

        <com.scorg.dms.ui.customesViews.CustomTextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginStart="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:paddingEnd="@dimen/dp4"
            android:paddingLeft="@dimen/dp2"
            android:textColor="@color/view_detail_color"
            android:textSize="@dimen/sp18"
            app:customFont="@string/roboto_medium"
            tools:text="@string/dummy_normal"
            android:paddingStart="@dimen/dp2" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp4"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>
