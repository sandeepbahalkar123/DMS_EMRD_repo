<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp56">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recentblue"
            android:orientation="horizontal"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp16"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp" />

            <com.scorg.dms.ui.customesViews.CustomTextView
                android:id="@+id/webViewTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp18"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                tools:text="Title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:padding="@dimen/dp10"
                android:visibility="gone"
                app:srcCompat="@drawable/bookmark_line" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/mainParentScrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e7e7e7"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/mainParentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp16"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    app:theme="@style/text_edit">

                    <EditText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center|left"
                        android:hint="@string/first_name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/sp16" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    app:theme="@style/text_edit">

                    <EditText
                        android:id="@+id/middleName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center|left"
                        android:hint="@string/middle_name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/sp16" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"

                    android:textColorHint="@color/black"
                    app:theme="@style/text_edit">

                    <EditText
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center|left"
                        android:hint="@string/last_name"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/sp16" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"

                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    app:theme="@style/text_edit">

                    <EditText
                        android:id="@+id/mobNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center|left"
                        android:hint="@string/enter_mobile_no"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/sp16" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    app:theme="@style/text_edit">

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center|left"
                        android:hint="@string/age"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/sp16" />

                </android.support.design.widget.TextInputLayout>

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radio_button_selector"
                        android:padding="@dimen/dp3"
                        android:text="@string/male" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radio_button_selector"
                        android:padding="@dimen/dp3"
                        android:text="@string/female" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radio_button_selector"
                        android:padding="@dimen/dp3"
                        android:text="@string/transgender" />
                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:visibility="visible"
                    app:theme="@style/text_edit">

                    <EditText
                        android:id="@+id/referenceID"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center|left"
                        android:hint="@string/reference_id"
                        android:maxLength="50"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/sp16" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnAddPatientSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@color/tagColor"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </ScrollView>

        <WebView
            android:id="@+id/webViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>



