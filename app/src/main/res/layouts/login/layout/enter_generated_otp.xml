<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp10"
        android:orientation="vertical">

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/headerMessageForMobileOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_otp_no"
            android:textColor="@color/Gray"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/gray_border_otp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp30"
                android:gravity="center"
                android:orientation="vertical">

                <com.rescribe.doctor.ui.customesViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/enter_otp"
                    android:textColor="@color/recentblue"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/gray_border_otp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/otpEditText"
                        style="@style/AppLoginMainStyle"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="bottom|right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/resendOtpBtnLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <com.rescribe.doctor.ui.customesViews.CustomTextView
                            style="@style/AppLoginMainStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/resend_in_text"
                            android:textAllCaps="false"
                            android:textColor="@color/recentblue"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <LinearLayout
                            android:layout_width="@dimen/dp40"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:background="@drawable/circle_red"
                            android:orientation="vertical">

                            <com.rescribe.doctor.ui.customesViews.CustomTextView
                                android:id="@+id/progressTime"
                                style="@style/AppLoginMainStyle"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:text="30"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp14"
                                android:textStyle="bold"
                                android:typeface="sans" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.rescribe.doctor.ui.customesViews.CustomTextView
                        android:id="@+id/resendOtpBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:text="@string/resend"
                        android:textColor="@color/recentblue"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="gone" />
                </LinearLayout>


                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/recentblue"
                    android:gravity="center"
                    android:text="@string/done"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/recentblue"
                    android:gravity="center"
                    android:text="@string/resend"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

