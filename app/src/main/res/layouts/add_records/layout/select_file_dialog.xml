<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_edges_background"
    android:orientation="vertical"
    android:padding="@dimen/dp6">

    <RelativeLayout
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp4"
        android:paddingEnd="@dimen/dp8"
        android:paddingStart="@dimen/dp8"
        android:paddingTop="@dimen/dp8">

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp2"
            app:srcCompat="@drawable/camera" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cameraIcon"
            android:layout_toRightOf="@+id/cameraIcon"
            android:padding="@dimen/dp10"
            android:text="@string/camera"
            android:textSize="@dimen/sp16"
            app:customFont="@string/roboto_bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp4"
        android:paddingEnd="@dimen/dp8"
        android:paddingStart="@dimen/dp8"
        android:paddingTop="@dimen/dp8">

        <ImageView
            android:id="@+id/galleryIcon"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp2"
            app:srcCompat="@drawable/picture" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/galleryIcon"
            android:layout_toRightOf="@+id/galleryIcon"
            android:padding="@dimen/dp10"
            android:text="@string/gallery"
            android:textSize="@dimen/sp16"
            app:customFont="@string/roboto_bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp8"
        android:paddingEnd="@dimen/dp8"
        android:paddingStart="@dimen/dp8"
        android:paddingTop="@dimen/dp4">

        <ImageView
            android:id="@+id/filesIcon"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp2"
            app:srcCompat="@drawable/folder" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/filesIcon"
            android:layout_toRightOf="@+id/filesIcon"
            android:padding="@dimen/dp10"
            android:text="@string/files"
            android:textSize="@dimen/sp16"
            app:customFont="@string/roboto_bold" />

    </RelativeLayout>

</LinearLayout>