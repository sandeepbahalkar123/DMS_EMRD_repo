<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.add_records.SelectedRecordsActivity">

    <ImageView
        android:id="@+id/coachmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp5"
        android:scaleType="centerCrop"
        android:src="@drawable/coachmark"
        android:visibility="gone"
        app:srcCompat="@drawable/coachmark"
        tools:visibility="gone" />


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/common_action_bar" />
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_selected_records" />


    <io.github.shree.fabmenu.FabSpeedDial
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp16"

        android:visibility="gone"

        app:fab_fabBackgroundColor="@color/tagColor"

        app:fab_fabDrawable="@drawable/fab_icon_records"
        app:fab_fabDrawableTint="#FFF"
        app:fab_fabRippleColor="#FFF"
        app:fab_menu="@menu/fab_vector"

        app:fab_miniFabBackgroundColor="#0075A5"
        app:fab_miniFabBackgroundColorList="@array/colors"
        app:fab_miniFabDrawableTint="@color/white"
        app:fab_miniFabDrawableTintList="@array/white_array"
        app:fab_miniFabRippleColor="@color/white"
        app:fab_miniFabRippleColorList="@array/white_array"

        app:fab_miniFabTextBackground="@drawable/label"
        app:fab_miniFabTextBackgroundList="@array/labels"
        app:fab_miniFabTextColor="@color/fab_mini"
        app:fab_miniFabTextColorList="@array/white_array"

        app:fab_touchGuardColor="@color/transparent"
        app:fab_useRevealEffect="true"
        app:fab_useTouchGuard="true" />

</android.support.design.widget.CoordinatorLayout>
