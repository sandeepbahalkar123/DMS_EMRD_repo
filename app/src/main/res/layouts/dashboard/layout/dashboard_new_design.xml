<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/dashboard_action_bar" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp40"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <LinearLayout
                android:id="@+id/layoutTopBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:background="@color/SkyBlue"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/welcome"
                        android:textColor="@color/green"
                        android:textSize="@dimen/sp18" />

                    <TextView
                        android:id="@+id/doctorNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/welcomeTextView"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18"
                        tools:text="Dr. Rahul Kalyanpur" />

                    <TextView
                        android:id="@+id/aboutDoctorTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/doctorNameTextView"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:maxLines="1"
                        android:text="MBBS, MD - Medicine, Neurology"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/layoutTotalPatients"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/curve_edge_dashbooard_display_count_bg"
                            android:paddingBottom="@dimen/dp16"
                            android:paddingTop="@dimen/dp16">

                            <TextView
                                android:id="@+id/totalPatientsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/totalPatientsCount"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/today_patient"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutTodayAppointment"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_edge_dashbooard_display_count_bg"
                            android:paddingBottom="@dimen/dp16"
                            android:paddingTop="@dimen/dp16">

                            <TextView
                                android:id="@+id/todayAppointmentsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/todayAppointmentsCount"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/today_appointment"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutAdmittedPatient"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_edge_dashbooard_display_count_bg"
                            android:paddingBottom="@dimen/dp16"
                            android:paddingTop="@dimen/dp16">

                            <TextView
                                android:id="@+id/admittedPatientCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/admittedPatientCount"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/admitted_patients"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/layoutWaitingPatient"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_edge_dashbooard_display_count_bg"
                            android:paddingBottom="@dimen/dp16"
                            android:visibility="gone"
                            android:paddingTop="@dimen/dp16">

                            <TextView
                                android:id="@+id/waitingPatientCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/waitingPatientCount"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/admitted_patients"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutPendingApproval"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_edge_dashbooard_display_count_bg"
                            android:paddingBottom="@dimen/dp16"
                            android:paddingTop="@dimen/dp16">

                            <TextView
                                android:id="@+id/pendingApprovalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/pendingApprovalCount"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/pending_approval"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/hostViewsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp8"
            android:layout_marginTop="@dimen/dp0"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/patientLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/mypatients_icon_copy"
                        tools:ignore="ContentDescription" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textHeaderTodayAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="@string/today_appointment_no_new_line"
                    android:textColor="@color/tagColor"
                    android:textSize="@dimen/sp16"
                    tools:text="@string/today_appointment_no_new_line" />

                <TextView
                    android:id="@+id/viewTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="@string/view_all"
                    android:textAllCaps="true"
                    android:textColor="@color/tagColor"
                    android:textSize="@dimen/sp12"
                    tools:text="@string/view_all" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:background="@color/grey_700" />

            <include layout="@layout/common_recycler_view"></include>

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>