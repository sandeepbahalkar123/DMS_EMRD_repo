<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/dashboard_action_bar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/bannerLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height">

                <LinearLayout
                    android:id="@+id/layoutTopBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/SkyBlue"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/welcomeTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/welcome"
                            android:textColor="@color/green"
                            android:textSize="@dimen/sp18" />

                        <TextView
                            android:id="@+id/doctorNameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp18"
                            tools:text="Dr. Rahul Kalyanpur" />

                        <TextView
                            android:id="@+id/aboutDoctorTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp12"
                            tools:text="MBBS, MD - Medicine, Neurology" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/label_height"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp20"
                        android:gravity="center"
                        android:background="@color/transparent"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/layoutTotalPatients"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/curve_background"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/totalPatientsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/dp2"
                                app:srcCompat="@drawable/ic_allpatient"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/today_patient"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutTodayAppointment"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_background"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/todayAppointmentsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/today_appointment"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutAdmittedPatient"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_background"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/admittedPatientCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/admitted_patients"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/layoutWaitingPatient"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/waitingPatientCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/admitted_patients"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutPendingApproval"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="1"
                            android:background="@drawable/curve_background"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/pendingApprovalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/timing_bg_color"
                                android:textSize="@dimen/sp20"
                                tools:text="21" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:text="@string/pending_approval"
                                android:textColor="@color/dashboard_text_color"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/hostViewsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/bannerLayout"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/dp5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textHeaderTodayAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/today_appointment_no_new_line"
                        android:textColor="@color/tagColor"
                        android:textSize="@dimen/sp16"
                        tools:text="@string/today_appointment_no_new_line" />

                    <ImageView
                        android:id="@+id/patientLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@drawable/mypatients_icon_copy"
                        tools:ignore="ContentDescription" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabsActiveVieAll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tab_height"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        app:tabGravity="fill"
                        android:layout_centerVertical="true"
                        app:tabIndicatorHeight="@dimen/dp0"
                        app:tabMode="fixed"
                        app:tabPaddingEnd="0dp"
                        app:tabPaddingStart="0dp"
                        tools:layout_width="@dimen/dp50" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/grey_700" />

                <include layout="@layout/common_recycler_view"></include>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>