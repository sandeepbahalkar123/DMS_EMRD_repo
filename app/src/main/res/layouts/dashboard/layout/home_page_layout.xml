<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dashBoradBgframeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_back">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/dashboard_image" />

        <LinearLayout
            android:id="@+id/viewPagerDoctorItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginStart="@dimen/dp8"
            android:background="@drawable/curve_edge_dashbooard_display_count_bg"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp16"
            android:paddingTop="@dimen/dp16"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginStart="@dimen/dp8"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center">

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:id="@+id/totalPatientsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:textColor="@color/timing_bg_color"
                    android:textSize="@dimen/sp24"
                    app:customFont="@string/roboto_bold"
                    tools:text="21" />

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/totalPatientsCount"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="@string/today_patient"
                    android:textColor="@color/dashboard_text_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp21"
                android:layout_marginTop="@dimen/dp21"
                app:srcCompat="@drawable/vertical_line"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:clickable="true">

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:id="@+id/todayAppointmentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:textColor="@color/timing_bg_color"
                    android:textSize="@dimen/sp24"
                    app:customFont="@string/roboto_bold"
                    tools:text="21" />

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/todayAppointmentsCount"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:gravity="center"

                    android:text="@string/today_appointment"
                    android:textColor="@color/dashboard_text_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp21"
                android:layout_marginTop="@dimen/dp21"
                app:srcCompat="@drawable/vertical_line"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:layout_weight="1"
                android:clickable="true">

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:id="@+id/waitingPatientCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:textColor="@color/timing_bg_color"
                    android:textSize="@dimen/sp24"
                    app:customFont="@string/roboto_bold"
                    tools:text="21" />

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/waitingPatientCount"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:gravity="center"

                    android:text="@string/waiting_patients"
                    android:textColor="@color/dashboard_text_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />
            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp21"
                android:layout_marginTop="@dimen/dp21"
                app:srcCompat="@drawable/vertical_line"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:id="@+id/pendingApprovalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"

                    android:textColor="@color/timing_bg_color"
                    android:textSize="@dimen/sp24"
                    app:customFont="@string/roboto_bold"
                    tools:text="21" />

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingApprovalCount"
                    android:layout_centerHorizontal="true"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="@string/pending_approval"
                    android:textColor="@color/dashboard_text_color"
                    android:textSize="@dimen/sp12"
                    app:customFont="@string/roboto_regular" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctorInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/viewPagerDoctorItem"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginStart="@dimen/dp14"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.scorg.dms.ui.customesViews.CircularImageView
                android:id="@+id/doctorDashboardImage"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                app:border_color="@color/white"
                app:border_width="@dimen/dp1"
                app:srcCompat="@drawable/filtergrayfemaleicon" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginStart="@dimen/dp8">

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18"
                    app:customFont="@string/roboto_bold" />

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:id="@+id/doctorNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/welcomeTextView"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18"
                    app:customFont="@string/roboto_bold"
                    tools:text="Dr. Rahul Kalyanpur" />

                <com.scorg.dms.ui.customesViews.CustomTextView
                    android:id="@+id/aboutDoctorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctorNameTextView"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp13"
                    app:customFont="@string/roboto_bold"
                    tools:text="MBBS, MD - Medicine, Neurology" />


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/hostViewsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>